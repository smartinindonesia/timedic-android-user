<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/playItem"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_play" />

            <TextView
                android:id="@+id/videoItem"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playItem"
                android:maxLines="3"
                android:text="Title"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/channelLogo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_play" />

            <TextView
                android:id="@+id/channelName"
                android:layout_toRightOf="@+id/channelLogo"
                android:layout_above="@+id/viewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Timedic Channel"/>

            <TextView
                android:id="@+id/viewCount"
                android:layout_toRightOf="@+id/channelLogo"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="...k View"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
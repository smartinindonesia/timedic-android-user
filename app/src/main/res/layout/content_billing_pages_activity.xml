<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:padding="@dimen/global_page_padding_normal"
    android:scrollbars="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cashTotal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculator_input_height"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:text="Total Tagihan" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/calculator_input_padding"
                android:layout_marginTop="@dimen/calculator_input_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/payment_list_space">

                <TextView
                    android:id="@+id/paymentMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:gravity="center_vertical"
                    android:text="Payment Method"
                    android:textSize="@dimen/calculator_hint_size" />

                <ImageView
                    android:id="@+id/paymentLogo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/calculator_input_padding"
                android:layout_marginTop="@dimen/calculator_input_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/billAccountTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Rekening" />

                <EditText
                    android:id="@+id/billAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:hint="Masukkan nomor rekening anda"
                    android:inputType="number"
                    android:padding="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/calculator_input_padding"
                android:layout_marginTop="@dimen/calculator_input_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/billAccountUserTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemilik Rekening" />

                <EditText
                    android:id="@+id/billAccountUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:hint="Masukkan nama pemilik rekening sesuai buku tabungan"
                    android:inputType="number"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
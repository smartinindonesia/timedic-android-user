<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/notifSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih tanggal dan waktu kunjungan untuk pemeriksaan"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/datePickInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textColorPrimary"
            android:backgroundTint="@color/textColorPrimary"
            android:layout_weight="8.5">

            <EditText
                android:id="@+id/datePick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Tanggal"
                android:enabled="false"
                android:textColorHighlight="@color/textColorPrimary"
                android:backgroundTint="@color/textColorPrimary"
                android:foregroundTint="@color/textColorPrimary"
                android:textColorHint="@color/textColorPrimary"
                android:textColor="@color/textColorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/btnChooseDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/sign_in_selector_bg"
            android:src="@drawable/ic_select_date_white" />

    </LinearLayout>

    <TextView
        android:id="@+id/timeSelectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam Layanan"
        android:textColor="@color/textColorPrimary" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/gotoNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_selector_bg"
        android:hint="Selanjutnya"
        android:textColorHint="@color/sign_in_selector_fg" />

</LinearLayout>
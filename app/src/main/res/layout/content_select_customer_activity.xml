<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/global_act_padding"
    android:paddingRight="@dimen/global_act_padding"
    android:layout_marginTop="?attr/actionBarSize">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/customer_list"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/addNewCustomer"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/addNewCustomer"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/orange_selector_button_bg"
        android:textColorHint="@color/sign_in_selector_fg"
        android:layout_marginBottom="10dp"
        android:hint="Tambahkan Pasien"
        android:layout_height="wrap_content" />

</RelativeLayout>
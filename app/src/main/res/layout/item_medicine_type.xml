    android:layout_width="match_parent"
    android:layout_height="@dimen/calculator_input_height"
    android:background="@drawable/bg_blue_rounded_field"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/calculator_input_height"
        android:gravity="center_vertical"
        android:text="Demo"
        android:paddingLeft="@dimen/calculator_input_padding"
        android:paddingRight="@dimen/calculator_input_padding"
        android:textColor="@color/button_text_color" />

</LinearLayout>
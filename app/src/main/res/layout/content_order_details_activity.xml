<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/colorPrimary"
    android:scrollbars="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/calculator_devider_space"
                android:layout_marginTop="@dimen/calculator_devider_space"
                android:background="@color/shadow_clr"/>

            <TextView
                android:id="@+id/serviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/calculator_devider_space"
                android:layout_marginTop="@dimen/calculator_devider_space"
                android:background="@color/shadow_clr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/orderNumberTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Nomor Pemesanan" />

                <TextView
                    android:id="@+id/orderNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/transactionOrderDateTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Tanggal Pemesanan" />

                <TextView
                    android:id="@+id/transactionOrderDate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/transactionVisitDateTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Tanggal Kunjungan" />

                <TextView
                    android:id="@+id/transactionVisitDate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/downPaymentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Biaya Kunjungan Awal" />

                <TextView
                    android:id="@+id/downPayment"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/totalApproxCashTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Harga Perkiraan Awal" />

                <TextView
                    android:id="@+id/totalApproxCash"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/totalCashTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Harga Akhir Layanan" />

                <TextView
                    android:id="@+id/totalCash"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/addressLocTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Alamat Pemesanan" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.6"
                    android:padding="@dimen/calculator_row_space">

                    <TextView
                        android:id="@+id/addressLoc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calculator_input_height"
                        android:paddingLeft="@dimen/calculator_input_padding"
                        android:paddingRight="@dimen/calculator_input_padding"/>

                    <TextView
                        android:id="@+id/mapLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_link_color"
                        android:paddingLeft="@dimen/calculator_input_padding"
                        android:paddingRight="@dimen/calculator_input_padding"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/transactionStatusTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Status Transaksi" />

                <TextView
                    android:id="@+id/transactionStatus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/calculator_input_height"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/calculator_input_padding"
                    android:paddingRight="@dimen/calculator_input_padding"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/calculator_row_space">

                <TextView
                    android:id="@+id/caregiverHistoryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Perawat yang ditugaskan :" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/caregiverHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>